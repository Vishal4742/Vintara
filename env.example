# ===========================================
# VINTARA - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to version control!

# ===========================================
# WALLET & DEPLOYMENT
# ===========================================
# Your private key for deploying contracts and signing transactions
# Get this from MetaMask: Account Details > Export Private Key
# IMPORTANT: Use a test wallet for development, never your main wallet!
PRIVATE_KEY=your_private_key_here

# ===========================================
# WALLETCONNECT (RainbowKit)
# ===========================================
# Get this from https://cloud.walletconnect.com/
# 1. Go to WalletConnect Cloud
# 2. Create a new project
# 3. Copy the Project ID
# This enables wallet connection functionality in your app
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ===========================================
# CONTRACT VERIFICATION
# ===========================================
# These are for verifying your contracts on block explorers
# You can get these from the respective block explorer websites

# RSK Block Explorer API Key (for Rootstock mainnet/testnet)
# Get from: https://blockscout.com/rsk/api_docs
# 1. Go to RSK Block Explorer
# 2. Create an account
# 3. Generate an API key
RSK_API_KEY=your_rsk_api_key_here

# Alternative: Etherscan API Key (if using Etherscan for verification)
# Get from: https://etherscan.io/apis
# 1. Go to Etherscan
# 2. Create an account
# 3. Generate an API key
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ===========================================
# PRICE ORACLE & EXTERNAL APIS
# ===========================================
# These are for getting real-time price data

# CoinGecko API Key (for cryptocurrency prices)
# Get from: https://www.coingecko.com/en/api
# 1. Go to CoinGecko API
# 2. Create an account
# 3. Generate an API key
# This is used for getting BTC, ETH, and other token prices
COINGECKO_API_KEY=your_coingecko_api_key_here

# CoinMarketCap API Key (alternative price data source)
# Get from: https://coinmarketcap.com/api/
# 1. Go to CoinMarketCap API
# 2. Create an account
# 3. Generate an API key
CMC_API_KEY=your_coinmarketcap_api_key_here

# ===========================================
# DATABASE & BACKEND (Optional)
# ===========================================
# If you plan to add a backend for analytics and data storage

# MongoDB connection string (for storing transaction data, user analytics)
# Get from: https://www.mongodb.com/atlas
# 1. Create a MongoDB Atlas account
# 2. Create a cluster
# 3. Get the connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vintara

# PostgreSQL connection string (alternative database)
# Get from: https://www.postgresql.org/ or cloud providers like Supabase
DATABASE_URL=postgresql://username:password@localhost:5432/vintara

# ===========================================
# ANALYTICS & MONITORING (Optional)
# ===========================================
# For tracking user behavior and application performance

# Google Analytics ID (for website analytics)
# Get from: https://analytics.google.com/
# 1. Create a Google Analytics account
# 2. Create a property for your website
# 3. Get the Measurement ID
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry DSN (for error tracking and monitoring)
# Get from: https://sentry.io/
# 1. Create a Sentry account
# 2. Create a new project
# 3. Get the DSN
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# NOTIFICATION SERVICES (Optional)
# ===========================================
# For sending notifications to users

# SendGrid API Key (for email notifications)
# Get from: https://sendgrid.com/
# 1. Create a SendGrid account
# 2. Generate an API key
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Twilio API (for SMS notifications)
# Get from: https://www.twilio.com/
# 1. Create a Twilio account
# 2. Get Account SID and Auth Token
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================
# Environment configuration

# Set to 'development', 'staging', or 'production'
NODE_ENV=development

# Enable/disable debug logging
DEBUG=true

# Testnet faucet URL (for getting test tokens)
# RSK Testnet Faucet: https://faucet.rsk.co
FAUCET_URL=https://faucet.rsk.co

# ===========================================
# SECURITY
# ===========================================
# Security-related configurations

# JWT Secret for API authentication (if you add a backend)
JWT_SECRET=your_super_secret_jwt_key_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Network-specific settings

# Rootstock Testnet RPC URL
RSK_TESTNET_RPC=https://public-node.testnet.rsk.co

# Rootstock Mainnet RPC URL
RSK_MAINNET_RPC=https://public-node.rsk.co

# Gas price settings (in wei)
# Rootstock typically uses 0.06 gwei
GAS_PRICE=60000000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend-specific settings

# Base URL for your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Public API endpoints
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ===========================================
# SMART CONTRACT ADDRESSES (After Deployment)
# ===========================================
# These will be filled automatically after deployment
# But you can also set them manually if needed

# MockToken contract address
MOCK_TOKEN_ADDRESS=

# YieldVault contract address
YIELD_VAULT_ADDRESS=

# LendingProtocol contract address
LENDING_PROTOCOL_ADDRESS=

# LiquidityPool contract address
LIQUIDITY_POOL_ADDRESS=

# YieldFarming contract address
YIELD_FARMING_ADDRESS=

# PriceOracle contract address
PRICE_ORACLE_ADDRESS=

# Governance contract address
GOVERNANCE_ADDRESS=

# ===========================================
# NOTES
# ===========================================
# 1. NEVER commit this file to version control
# 2. Use different wallets for testnet and mainnet
# 3. Keep your private keys secure
# 4. Test thoroughly on testnet before mainnet deployment
# 5. Some API keys are optional - only add what you need
# 6. For hackathon submission, you mainly need:
#    - PRIVATE_KEY
#    - WALLETCONNECT_PROJECT_ID
#    - RSK_API_KEY (for contract verification)
